    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "pid": "${command:pickMyProcess}", // use ${command:pickProcess} to pick other users' processes
            "postRunCommands": [
                "setting set escape-non-printables false",
                "pro hand -s false -n false SIGBUS"
            ]
        }
    ]
}